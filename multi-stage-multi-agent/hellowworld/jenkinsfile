pipeline {
    agent {
        docker { image 'maven:3.9.6-eclipse-temurin-17' }
    }
    stages {
        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }
        stage('Run') {
            steps {
                sh 'mvn exec:java'
            }
        }
    }
    post {
        success {
            echo '✅ Build and run successful!'
        }
        failure {
            echo '❌ Build failed.'
        }
    }
}
