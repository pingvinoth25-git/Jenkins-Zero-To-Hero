pipeline {
  agent {
    docker { image 'openjdk:17-alpine' }
  }
  stages {
    stage('Build and Run') {
      steps {
        sh '''
          echo "Compiling Java program..."
          javac HelloWorld.java

          echo "Running program..."
          java HelloWorld
        '''
      }
    }
  }
  post {
    success {
      echo "✅ Build completed successfully!"
    }
    failure {
      echo "❌ Build failed!"
    }
  }
}
